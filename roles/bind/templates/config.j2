{% for zone in bind_primary_zones %}
zone "{{ zone.zone_name }}" {
        type primary;
        file "{{ bind_zone_dir }}/db.{{ zone.zone_name | replace('/', '-') }}";
        notify yes;
        allow-transfer {
{% for server in zone.secondary_servers %}
            {{server}};
{% endfor %}
        };
};

{% endfor %}

{% for zone in bind_secondary_zones %}
zone "{{ zone.zone_name }}" {
        type secondary;
        file "{{ bind_zone_dir }}/db.{{ zone.zone_name | replace('/', '-') }}.saved";
        primaries {
{% for server in zone.primary_servers %}
            {{server}};
{% endfor %}
        };
};

{% endfor %}

{% for zone in bind_forward %}
zone "{{ zone.zone_name }}" {
        type forward;
        forwarders {
{% for server in zone.forwarders %}
            {{server}};
{% endfor %}
        };
};

{% endfor %}
