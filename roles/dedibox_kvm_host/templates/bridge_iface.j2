# Bridge IPv6
auto {{ dedibox_kvm_host_bridge_iface_name }}
iface {{ dedibox_kvm_host_bridge_iface_name }} inet6 static
  bridge_ports none
  bridge_stp off
  bridge_fd 0
  dad-attempts 0
  address {{ dedibox_kvm_host_bridge_iface_ipv6_address }}
  netmask {{ dedibox_kvm_host_bridge_iface_ipv6_netmask }}
  post-up /sbin/ip -f inet6 neigh add proxy {{ dedibox_kvm_host_bridge_iface_ipv6_address }} dev {{ dedibox_kvm_host_bridge_iface_name }}
{% for i in [3, 4, 5, 6, 7, 8, 9, 10] %}
  post-up /sbin/ip -f inet6 neigh add proxy {{ dedibox_kvm_host_ipv6_block }}::{{ i }} dev {{ dedibox_kvm_host_phys_iface_name }}
  post-up /sbin/ip -f inet6 route add       {{ dedibox_kvm_host_ipv6_block }}::{{ i }} dev {{ dedibox_kvm_host_bridge_iface_name }}
{% endfor %}

# Bridge IPv4
iface {{ dedibox_kvm_host_bridge_iface_name }} inet static
  address {{ dedibox_kvm_host_bridge_iface_ipv4_address }}
  netmask {{ dedibox_kvm_host_bridge_iface_ipv4_netmask }}
